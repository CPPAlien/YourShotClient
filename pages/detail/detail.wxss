/* pages/detail/detail.wxss */
.container {
  display: flex;
  flex-direction: column;
}

.bottom {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  background: #eee;
  padding: 30rpx;
  margin-top: 60rpx;
  border-top-style: solid;
  border-width: 0.5rpx;
  border-color: #bbb;
}

.bottom-image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.bottom-text {
  font-size: 30rpx;
  color: #666;
}

.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 100%;
}

.error-image {
  margin-top: 200rpx;
  width: 250rpx;
  height: 250rpx;
}

.error-text {
  margin-top: 50rpx;
  color: #666;
  font-size: 40rpx;
}