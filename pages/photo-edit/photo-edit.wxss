/* pages/photo-edit/photo-edit.wxss */
.container {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
}

.image {
  height: 750rpx;
  width: 750rpx;
}

canvas {
  height: 750rpx;
  width: 750rpx;
  position: absolute;
  top: -9999rpx;
}

scroll-view {
  margin-top: 20rpx;
  width: 100%;
}

.scroll-container {
  display: flex;
  flex-direction: row;
  padding-left: 20rpx;
}

.filter-item {
  padding: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.filter-image {
  height: 200rpx;
  width: 200rpx;
}

.filter-text {
  font-size: 30rpx;
  color: #999;
  margin-bottom: 5rpx;
}

.filter-text-hover {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 5rpx;
}